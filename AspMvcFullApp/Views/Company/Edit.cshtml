@model AspMvcFullApp.Models.Company

<h2>Edit Company</h2>
<form asp-controller="company" 
    asp-action="edit" 
    asp-route-id="@Model.Id">
    <div>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" />
    </div>

    <div>
        <button type="submit">Save Company</button>
    </div>
</form>

